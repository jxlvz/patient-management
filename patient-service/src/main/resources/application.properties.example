# Application name
spring.application.name=patient-service

# H2 console path (for local dev/testing)
spring.h2.console.path=/h2-console

# H2 in-memory database (default for dev)
spring.datasource.url=jdbc:h2:mem:testdb
spring.datasource.driver-class-name=org.h2.Driver

# Database credentials (dummy/example)
spring.datasource.username=your_username
spring.datasource.password=your_password

# Hibernate dialect
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect

# Schema management (update | validate | create-drop | none)
spring.jpa.hibernate.ddl-auto=update

# Always initialize SQL scripts if present (e.g. data.sql)
spring.sql.init.mode=always

# Server port
server.port=4000

# Logging
logging.level.root=info
